public class Main
{
    public static void main(String[] args)
    {
        int number = 30;
        int sayac = 0;

        for (int i=1 ; i<number ; i++)
            if (number % i == 0)
            {
                sayac = sayac+i;
            }
        if (sayac == number)
        {
            System.out.println(sayac+":" + " is a perfect number");
        }
        else
        {
            System.out.println(number+":" + " is not a perfect number");
        }
    }
}
